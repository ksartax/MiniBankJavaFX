<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.cell.*?> 
<?import javafx.collections.*?> 
<?import src.Model.*?> 

<GridPane id="AnchorPane" 
          prefHeight="600.0" 
          prefWidth="800.0" styleClass="mainFxmlClass" 
          xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="src.Controller.FromTransactionController">
    
    <stylesheets>
        <URL value="@/src/Controller/view/style/fromtransaction.css"/>
        <URL value="@/src/Controller/view/style/core.css"/>
    </stylesheets>
    
    <padding>
        <Insets 
            top="25" 
            right="25" 
            bottom="10" 
            left="25"
        />
    </padding>
    
    <HBox spacing="10" 
          alignment="top_left" 
          GridPane.columnIndex="0" 
          GridPane.rowIndex="0">
        
        <padding>
            <Insets top="25" />
        </padding>
                
        <Button 
            styleClass="button" 
            text="Menu" 
            onAction="#returnMenuStage" 
        />
                
    </HBox>
    
    
    
    <Label 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="2"/>
    
    <BorderPane 
        styleClass="menuPanel" 
        prefHeight="600.0" 
        prefWidth="800.0" 
        GridPane.columnIndex="0" 
        GridPane.rowIndex="3" 
    >
              
        <center>
               
            <TableView fx:id="tableView" >
                <columns>
                    <TableColumn 
                        text="Nr konta"
                        prefWidth="250">
                        
                        <cellValueFactory>
                            <PropertyValueFactory property="firstName" />
                        </cellValueFactory>
                        
                    </TableColumn>
                    <TableColumn 
                        text="Ilosc pieniÄ™dzy"
                        prefWidth="250">
                        
                        <cellValueFactory>
                            <PropertyValueFactory property="lastName" />
                        </cellValueFactory>
                        
                    </TableColumn>   
                    <TableColumn 
                        text="Data"
                        prefWidth="250">
                        
                        <cellValueFactory>
                            <PropertyValueFactory property="data" />
                        </cellValueFactory>
                        
                    </TableColumn>                
                </columns> 
                
                <items>
                    <FXCollections fx:factory="observableArrayList">
                      
                    </FXCollections>
                </items>
                
            </TableView>
                
        </center>
        
    </BorderPane>
    
    
</GridPane>
